<div class="col-md-4">
  <div class="card-bg-faded">
    <div class="card-header">
      <h4 class="lead"><span class="icon-i-diabetes-education"> </span> Indikerede blodprøver</h4>
    </div>
    <div class="card-block">
      Blodprøver.
    </div>
  </div>
</div>
  <% test = @illness.paraclinical.test %>
  <div class="col-md-4">
  <div class="card-bg-faded">
    <div class="card-header">
      <h4 class="lead"><span class="icon-i-cath-lab"> </span> Indikeret billediagnostik</h4>
    </div>
    <div class="card-block">
      <div id="imaging" role="tablist" aria-multiselectable="true">
            <a data-toggle="collapse" data-parent="#imaging" href="#collapseMRI" aria-expanded="true" aria-controls="collapseMRI">
              <span class="badge <%= imaging_badge(test, :mri) %> badge-pill">MRI</span>
            </a>
            <div id="collapseMRI" class="collapse" role="tabpanel" aria-labelledby="headingMRI">
              <%= test.try(:mri) %>
            </div>
        <hr>
            <a data-toggle="collapse" data-parent="#imaging" href="#collapseXray" aria-expanded="true" aria-controls="collapseXray">
              <span class="badge <%= imaging_badge(test, :xray) %> badge-pill">Røntgen</span>
            </a>
            <div id="collapseXray" class="collapse" role="tabpanel" aria-labelledby="headingXray">
              <%= test.try(:xray) %>
            </div>
        <hr>
